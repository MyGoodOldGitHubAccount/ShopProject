@{ 
    Layout = null;
}
@model LoginModel
<h1> Login</h1>

<div class="container">
    <form asp-antiforgery="true" method="post" asp-action="Login" asp-controller="Users">
        <div asp-validation-summary="All"> </div>
        <div>
            <div>
                <label asp-for="Email"> </label>
                <input type="text" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Password"> </label>
                <input type="text" asp-for="Password" />
                <span asp-validation-for="Password" ></span>
            </div>
            <input type="submit" />
        </div>

    </form>

</div>

<footer>
   <div> Doesnt have account? <a asp-action="Register" asp-controller="User">Register</a></div>
</footer>